{
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@b87f13b5af7c3834b67c7d5129ce47365f7d1efe/"
  },
  "lock": false,
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  }
}
