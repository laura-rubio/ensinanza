---
layout: layouts/base.njk
---
<article>
<header>
<h1>{{ title }}</h1>

{{ content | safe }}
</header>

{% set hasCategories = false %}
<nav class="categories">
    <ul>
        {% for cat in categories %}
				{% set page = search.page("category filter='" + cat + "'") %}
				{% if page %}	
        <li>
            <h3>
                <a href="{{ page.data.url | url }}">
                    {{ page.data.title }}
                </a>
            </h3>

						{% set hasCategories = true %}
        </li>
				{% endif %}
        {% endfor %}
    </ul>
</nav>

{% set postslist = search.pages(filter) %}

{% if hasCategories and postslist.length %}
	<hr>
{% endif %}

<nav>
	<ul>
	{% for post in postslist %}
		<li>
			<h3>
				<a href="{{ post.data.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Sen t√≠tulo
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</li>
	{% endfor %}
	</ul>
</nav>

</article>