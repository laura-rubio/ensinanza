<!doctype html>
<html lang="gl">
	<head>
  		<meta charset="utf-8">
  		<link rel="dns-prefetch" href="https://identity.netlify.com">
  		<meta name="viewport" content="width=device-width, initial-scale=1.0">
  		<title>{{ title or renderData.title or metadata.title }}</title>
  		<script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  		{% set css %}
    		{% include "assets/css/inline.css" %}
  		{% endset %}
  		<style>{{ css | safe }}</style>
  		{% set js %}
    		{% include "assets/js/inline.js" %}
  		{% endset %}
  		<script>{{ js | safe }}</script>
		<script type="module" src="/static/components/answer.js"></script>
		<script type="module" src="/static/components/layout.js"></script>
		<script type="module" src="/static/components/tag.js"></script>
		<script type="module" src="/static/components/validate.js"></script>
	</head>

	<body>
		<header>
			<h2>
				<a href="{{ '/' | url }}">{{ metadata.title }}</a>
			</h2>
		</header>

		<main>
			{{ content | safe }}
		</main>
	</body>
</html>
